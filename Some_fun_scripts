# 1.  Find palindrome

#!/usr/bin/env python3                                                          │
s = input("Enter the Word :")                                                   │
def isPalindrome(s):                                                            │
                                                                                │
    # Using predefined function to                                              │
    # reverse to string print(s)                                                │
    rev = ''.join(reversed(s))                                                  │
                                                                                │
    # Checking if both string are                                               │
    # equal or not                                                              │
    if (s == rev):                                                              │
        return True                                                             │
    return False                                                                │
                                                                                │
# main function                                                                 │                                                                               │                                                                 │
ans = isPalindrome(s)                                                           │
if (ans):                                                                       │
   print(f"The Word Entered is {s} and it is a Palindrome")                     │
else:                                                                           │
   print(f"The Word Entered is {s} and it is not a Palindrome") 
